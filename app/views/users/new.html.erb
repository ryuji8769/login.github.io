<h1>新規登録</h1>

<%= form_with model: @user, url: user_path, locale: true do |f| %>
<div class="field">
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</div>

<div class="field">
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</div>

<div class="field">
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %>
</div>

<div class="field">
  <%= f.submit "sing up"%>
</div>

<%= link_to("ログイン","login_path") %>
<% end %>
